record(longin,"$(P)$(D):SerialNo") {
    field(DESC, "Serial number")				     
    field(DTYP,"asynInt32")
    field(INP,"@asynMask($(PORT_RO) 6 32)INT32_BE")
    field(SCAN,"I/O Intr")
}

record(ai, "$(P)$(D):FlowRt") {
    field(DESC, "Gas flow rate")
    field(DTYP, "asynInt32")
    field(INP,"@asynMask($(PORT_RO) 0 32)FLOAT32_BE")
    field(LINR,"NO CONVERSION")
    field(ASLO,"$(ASLO)")
    field(HOPR,"400")
    field(LOPR,"0")
    field(PREC,"3")
    field(EGU, "Nm³/h")
    field(SCAN,"I/O Intr")
    field(SMOO, "0.95")
    info (autosaveFields, "SMOO")
}

record(ai, "$(P)$(D):AccFlow") {
    field(DESC, "Accumulated gas flow")
    field(DTYP, "asynInt32")
    field(INP,"@asynMask($(PORT_RO) 2 32)FLOAT32_BE")
    field(LINR,"NO CONVERSION")
    field(ASLO,"$(ASLO)")
    field(EGU, "Nm³")
    field(SCAN,"I/O Intr")
    field(PREC,"3")
}

record(ai, "$(P)$(D):T") {
    field(DESC, "Ambient temperature")
    field(DTYP, "asynInt32")
    field(INP,"@asynMask($(PORT_RO) 4 32)FLOAT32_BE")
    field(LINR,"NO CONVERSION")
    field(HOPR,"60.0")
    field(LOPR,"0")
    field(PREC,"2")
    field(EGU, "°C")
    field(SCAN,"I/O Intr")
    field(SMOO, "0.8")
    info (autosaveFields, "SMOO")
}

